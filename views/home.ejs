<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Net Library</title>
    <link rel="stylesheet" href="./home.css" />
    <link rel="icon" href="./logo/logo.svg" type="image/svg+xml">
    <script src="/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script  type="application/javascript" src="script.js"></script>
    <script type="application/javascript" src="edit.js"></script>
  </head>
  <body>
    
    <div class="grid-container">
      <% result.forEach(song=> { %>
      <div class="sub-grid-container">
        <div class="img-container">
          <img id="item-image" src="<%= song.image %>" alt="" />
        </div>
        <span><%= song.title %> by <%= song.artist %></span>
        <div class="buttons">
          <button id="edit" class="edit-btn" data-id="<%= song.id %>">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              height="24px"
              viewBox="0 -960 960 960"
              width="24px"
              fill="#e8eaed"
            >
              <path
                d="M200-200h57l391-391-57-57-391 391v57Zm-80 80v-170l528-527q12-11 26.5-17t30.5-6q16 0 31 6t26 18l55 56q12 11 17.5 26t5.5 30q0 16-5.5 30.5T817-647L290-120H120Zm640-584-56-56 56 56Zm-141 85-28-29 57 57-29-28Z"
              />
            </svg>
          </button>
          <button id="delete" data-id="<%= song.id %>">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              height="24px"
              viewBox="0 -960 960 960"
              width="24px"
              fill="#e8eaed"
            >
              <path
                d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM360-280h80v-360h-80v360Zm160 0h80v-360h-80v360ZM280-720v520-520Z"
              />
            </svg>
          </button>
          <a draggable="false" href="<%= song.stream %>">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              height="24px"
              viewBox="0 -960 960 960"
              width="24px"
              fill="#e8eaed"
            >
              <path
                d="M320-120v-80H160q-33 0-56.5-23.5T80-280v-480q0-33 23.5-56.5T160-840h640q33 0 56.5 23.5T880-760v480q0 33-23.5 56.5T800-200H640v80H320ZM160-280h640v-480H160v480Zm0 0v-480 480Z"
              />
            </svg>
          </a>
        </div>
      </div>
      <% }) %>
      
      <a id="add-hyperlink"><svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#e8eaed"><path d="M440-440H200v-80h240v-240h80v240h240v80H520v240h-80v-240Z"/></svg></a>

    </div>
    
    <div id="add-div" class="add-content">
      <%- include("./add.ejs") %>
    </div>

    <div id="edit-div" class="editContent">
      <%- include("./edit.ejs") %>
    </div>

  </body>
</html>
